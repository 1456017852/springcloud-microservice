<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.naruto.springcloud.mapper.DeptMapper">

    <select id="queryAllDept" resultType="com.naruto.springcloud.bean.Dept">
	  select * from tb_department
	</select>

    <insert id="saveDept" parameterType="com.naruto.springcloud.bean.Dept">
      insert into tb_department (deptNo,deptName,db_source) values (#{deptNo},#{deptName},database())
    </insert>

    <select id="queryDept" parameterType="java.lang.Integer" resultType="com.naruto.springcloud.bean.Dept">
      select * from tb_department where id=#{id}
    </select>

</mapper>
